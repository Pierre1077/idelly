{% extends 'base.html.twig' %}

{% block title %}Meet Show{% endblock %}

{% block body %}
           
    <div class="container">
    <h2 class="white">{{ meet.patient.firstname }} {{ meet.patient.name }}</h2>
    <h3>Soins</h3>
    <p class="gray-margin">{{ meet.typeSoin }}</p>
    <h3>Frequence</h3>
    <ul>Debut de passage :</ul>
    <p class="gray-margin">
        <span class="date">{{ meet.dateDebut|date('d/m/Y') }}</span>
    </p>
     <ul>Fin de passage :</ul>
    <p class="gray-margin">
        <span class="date">{{ meet.dateFin|date('d/m/Y') }}</span>
    </p>
    <div class="flex-container">
        <ul>Heure de passage :</ul>
        <div class="checkbox-wrapper">
            <p class="time">{{ meet.passages[0].hour|date('H:i') }}</p>
        </div>
    </div>

    <h3>Type de passage :</h3>
    <p class="gray-margin">{{ meet.typePassage }}</p>
    </div>

                <style>
                .gray-margin {
                margin: 10px 0; /* Add margin-bottom to create space */
                background-color: white;
                padding: 15px;
                border-radius: 30px;
                }
                .checkbox-wrapper {
                 display: flex; 
                 align-items: center;
                }      
                       

                .right-image {
                    float: right; 
                    width: 20px; 
                    height: auto; 
                }
                u,ul {
                font-weight: bold;
                color: white;
                }

                .flex-container {
                display: flex;
                align-items: center; 
                }
                h2{
                    padding-top: 15px;
                }
                h3{
                    color: white;
                    outline: none;
                    padding: 15px;
                    padding-top: 5px;
                }
                
                ul {    
                    margin-right: 10px; 
                }
                .white{
                 font-weight: 20px;
                 color: white;
                 text-align: center;
                }
                .time{
                    font-weight: bold;
                    color: #F3CEF6;
                }
                .container {
                height: 100vh;
                }
                p{
                    font-size: 20px;
                }
    </style>

            
    
{% endblock %}