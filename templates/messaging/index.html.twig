{% extends 'base.html.twig' %}

{% block title %}Annuaire
{% endblock %}

{% block body %}
	<div class="container p-3" style="min-height: 100vh">
    {# Annuaire #}
		{% for userDistant in users %}
			{% if userDistant != user %}
				<div class="card">
					<div>Nom :
						{{ userDistant.name }}, Prenom :
						{{userDistant.firstname}}
					</div>
					<a href="{{ path('redirection_group', {'id': userDistant.id}) }}">Groupe</a>
				</div>
			{% endif %}
		{% endfor %}
        {# Message r√©cent #}
		{% for groupChat in groupChats %}
			{% if groupChat.lastUpdate != null %}
                <div class="card">
                    <div>Nom :
                        {% for userDistant in groupChat.users %}
                            {% if userDistant != user %}
                                {{ userDistant.name }}
                                {{ userDistant.firstname }}
                            {% endif %}
                        {% endfor %}
                    </div>
                    <a href="{{ path('redirection_group', {'id': groupChat.id}) }}">Voir</a>
                </div>
            {% endif %}
		{% endfor %}
	</div>

{% endblock %}
