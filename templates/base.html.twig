<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="{{ asset('assets/style/style.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>

    <body>
        {% block body %}{% endblock %}
    </body>
    {% if app.request.attributes.get('_route') not in ['app_register', 'app_login'] %}
        <nav>
            <div>
                <a
                        href="{{ path('app_more') }}"
                        {% if app.request.attributes.get('_route')  in ['app_more'] %}style="color: #e6007e!important;"{% endif %}
                >
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <div>
                <a
                        href="{{ path('app_meet', {'day': 'now'|date('d-m-Y')})}}"
                        {% if app.request.attributes.get('_route')  in ['app_meet'] %}style="color: #e6007e!important;"{% endif %}
                >
                    <i class="fa-solid fa-car"></i>
                </a>
                <p {% if app.request.attributes.get('_route')  in ['app_meet'] %}style="color: #e6007e!important;"{% endif %}>TOURNEE</p>
            </div>
            <div>
                <a
                        href="{{ path('app_patients') }}"
                        {% if app.request.attributes.get('_route')  in ['app_patients'] %}style="color: #e6007e!important;"{% endif %}
                >
                    <i class="fa-solid fa-user"></i>
                </a>
                <p {% if app.request.attributes.get('_route')  in ['app_patients'] %}style="color: #e6007e!important;"{% endif %}>PATIENTS</p>
            </div>
            <div>
                <a
                        href="{{ path('app_transmissions') }}"
                        {% if app.request.attributes.get('_route')  in ['app_transmissions'] %}style="color: #e6007e!important;"{% endif %}
                >
                    <i class="fa-solid fa-comments"></i>
                </a>
                <p {% if app.request.attributes.get('_route')  in ['app_transmissions'] %}style="color: #e6007e!important;"{% endif %}>TRANSMISSION</p>
            </div>
            <div>
                <a
                        href="{{ path('app_messagerie') }}"
                        {% if app.request.attributes.get('_route')  in ['app_messagerie'] %}style="color: #e6007e!important;"{% endif %}
                >
                    <i class="fa-solid fa-comment"></i>
                </a>
                <p {% if app.request.attributes.get('_route')  in ['app_messagerie'] %}style="color: #e6007e!important;"{% endif %}>MESSAGERIE</p>
            </div>
            <div>
                <a href="{{ path('app_menu') }}"><i class="fa-solid fa-bars"></i></a>
                <p>PLUS</p>
            </div>
        </nav>
    {% endif %}
</html>
