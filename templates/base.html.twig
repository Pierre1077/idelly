            <a href="{{ path('app_more') }}">+</a>
            <a href="{{ path('app_meet', {'day': 'now'|date('d-m-Y')})}}">Meet</a>
            <a href="{{ path('app_patients') }}">Patient</a>
            <a href="{{ path('app_transmissions') }}">Transmission</a>
            <a href="{{ path('app_messagerie') }}">Messagerie</a>
            <a href="{{ path('app_menu') }}">Menu</a>
        </nav>
    {% endif %}
</html>
